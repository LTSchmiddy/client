{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "src": ["./src"] // This mapping is relative to "baseUrl"
      // "plugins": ["./plugins"] // This mapping is relative to "baseUrl"
    }
  },
  "exclude": [
    "./node_modules",
    "./plugins",
    "./platforms",
    "./www"
  ]
}